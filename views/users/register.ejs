<% include ../partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">New User Registration</div>
    <form class="ui form" action="/register" method="POST">
        
        <div class="field">
            <label>Username</label>
            <input type="text" name="username" placeholder="username">
        </div>
        
        <div class="field">
            <label>Password</label>
            <input type="password" name="password" placeholder="password">
        </div>
        
        <div class="form-group">
            <label for="avatar">Avatar Image Url</label>
            <input class="form-control" type="text" name="avatar" placeholder="avatar url">
        </div>
        
        <div class="form-group">
            <label for="firstName">First name</label>
            <input class="form-control" type="text" name="firstName" placeholder="first name">
        </div>
        
        <div class="form-group">
            <label for="lastName">Last name</label>
            <input class="form-control" type="text" name="lastName" placeholder="Last name">
        </div>
        
        <div class="form-group">
            <label for="email">Email Id</label>
            <input class="form-control" type="email" name="email" placeholder="abc@email.com">
        </div>
        
        <div class="form-group">
            <label for="adminCode">Admin Code</label>
            <input class="form-control" type="text" name="adminCode" placeholder="admin code">
        </div>
        
        
        <input class="ui violet basic button " type="Submit">
        
        
    </form>

<a href="/campgrounds">Go Back</a>
</div>


<% include ../partials/footer %>


