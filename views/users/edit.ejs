<% include ../partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">Edit User Profile</div>
    <form class="ui form" action="/users/<%=user._id%>?_method=PUT" method="POST">
        
        <div class="field">
            <label>Username</label>
            <input type="text" name="username" value="<%=user.username%>">
        </div>
        
        <div class="field">
            <label>Password</label>
            <input type="text" name="password"  value="cbsjjbcjhbs">
        </div>
        
        <div class="form-group">
            <label for="avatar">Avatar Image Url</label>
            <input class="form-control" type="text" name="avatar" value="<%=user.avatar%>">
        </div>
        
        <div class="form-group">
            <label for="firstName">First name</label>
            <input class="form-control" type="text" name="firstName" value="<%=user.firstName%>">
        </div>
        
        <div class="form-group">
            <label for="lastName">Last name</label>
            <input class="form-control" type="text" name="lastName" value="<%=user.lastName%>">
        </div>
        
        <div class="form-group">
            <label for="email">Email Id</label>
            <input class="form-control" type="email" name="email" value="<%=user.email%>">
        </div>
        
        <div class="form-group">
            <label for="adminCode">Admin Code</label>
            <input class="form-control" type="text" name="adminCode" value="<%=user.adminCode%>">
        </div>
        
        
        <input class="ui violet basic button " type="Submit">
        
        
    </form>

<a href="/campgrounds">Go Back</a>
</div>


<% include ../partials/footer %>

