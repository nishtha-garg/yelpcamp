<% include ../partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">Edit Campground:<%=campground.name%> </div>
    <form class="ui form" action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
        
        <div class="field">
            
            <input type="text" name="campground[name]" value="<%=campground.name%>">
        </div>
        
        <div class="field">
            
            <input type="text" name="campground[image]" value="<%=campground.image%>">
        </div>
        
        <div class="field">
        
            <input type="number" name="campground[price]" value="<%=campground.price%>">
        </div>
        
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" value="<%=campground.location%>">
        </div>
        
        <div class="field">
            
            <textarea name="campground[description]"> <%=campground.description%> </textarea>
        </div>
        
        <input class="ui violet basic button " type="Submit" value="Update">
        
        
    </form>

<a href="/campgrounds">Go Back</a>
</div>


<% include ../partials/footer %>


























